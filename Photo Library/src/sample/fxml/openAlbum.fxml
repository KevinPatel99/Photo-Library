<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.OpenAlbumController">
   <children>
      <Button fx:id="addPhotoButton" layoutX="570.0" layoutY="25.0" mnemonicParsing="false" onAction="#addPhotoEvent" prefHeight="31.0" prefWidth="118.0" text="Add Photo" />
      <Label fx:id="captionLabel" layoutX="320.0" layoutY="256.0" prefHeight="26.0" prefWidth="187.0" />
      <ListView fx:id="photoList" layoutX="14.0" layoutY="14.0" prefHeight="421.0" prefWidth="284.0" />
      <TextField fx:id="changeCaptionField" alignment="CENTER" layoutX="320.0" layoutY="291.0" promptText="Input Photo Caption" />
      <Button fx:id="copyPhotoButton" layoutX="570.0" layoutY="106.0" mnemonicParsing="false" onAction="#copyPhotoEvent" prefHeight="31.0" prefWidth="118.0" text="Copy Photo" />
      <Button fx:id="removePhotoButton" layoutX="570.0" layoutY="64.0" mnemonicParsing="false" onAction="#removePhotoEvent" prefHeight="31.0" prefWidth="118.0" text="Remove Photo" />
      <Button fx:id="movePhotoButton" layoutX="570.0" layoutY="147.0" mnemonicParsing="false" onAction="#movePhotoEvent" prefHeight="31.0" prefWidth="118.0" text="Move Photo" />
      <Button fx:id="quitButton" layoutX="616.0" layoutY="451.0" mnemonicParsing="false" onAction="#quitEvent" prefHeight="35.0" prefWidth="70.0" text="Quit" />
      <Button fx:id="slideshowButton" layoutX="101.0" layoutY="441.0" mnemonicParsing="false" onAction="#slideshowEvent" prefHeight="45.0" prefWidth="110.0" text="Slideshow" />
      <ImageView fx:id="photoDisplay" fitHeight="231.0" fitWidth="244.0" layoutX="309.0" layoutY="14.0" />
      <Button fx:id="setCaption" alignment="CENTER" layoutX="320.0" layoutY="328.0" onAction="#setPhotoCaption" prefHeight="31.0" prefWidth="187.0" text="Set Caption" />
   </children>
</AnchorPane>
